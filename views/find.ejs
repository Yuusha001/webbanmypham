<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>

<body>
    <div class="main">
        <h1>All Posts</h1>
            <table class="tableCss">
                <tr>
                    <th>Tiêu đề</th>
                    <th>Mô Tả</th>
                    <th>Giá Gốc</th>
                    <th>Giá Ưu Đãi</th>
                    <th>Ảnh</th>
                    <th></th>
                    <th></th>
                </tr>
                <tbody>
                <% if(products.length > 0){ %>
                    <% products.forEach(products => { %>
                        <tr> 
                            <td><%= products.title %></td>
                            <td><%= products.snippet %></td>
                            <td><%= products.gia_goc %></td>
                            <td><%= products.gia_moi %></td>
                            <td><img src="/<%= products.image %>" width="100px" height="100px"></td>
                            <td> 
                                <a class="btn btn-primary" href="/index/<%= products.id %>/edit" role="button">Update</a>
                            </td>
                            <td> 
                                <a class="btn btn-primary" href="#" role="button" data-bs-toggle="modal" data-bs-target="#delete-modal" data-id="<%=products.id %>">Delete</a>
                            </td>
                        </tr>
                    <%})%>
                <%} else {%>
                </tbody>
            </table>
        <p> Nothing to display </p>
                <%}%>    
    </div>
    <!-- Modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Xóa Bài Viết</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Bạn có chắc muốn xóa bài viết này chứ ?</p> 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
          <button type="button" class="btn btn-danger" id="btn-delete">Xóa</button>
        </div>
      </div>
    </div>
    </div>
    <form method="POST" name="delete-form" ></form>
</body>

<style>
    
    h1{
        text-align: center;
    }

    .modal-title ,.modal-body p{
        color: #000;
    }

    .tableCss            
    {
        margin: auto;
        width: 1500px;
        border: solid 1px #e6e5e5;
    }
            
/*for header*/
.tableCss th
{
    background-color: #0094ff;
    color:#fff;
    padding: 10px;
    text-align:center;
}
            
.tableCss td
{
    min-width: 100px;
    text-align: center;
    border: solid 1px #e6e5e5;
    width: fit-content;
}
            
/*for body*/
 tbody
{
    background-color: #e9e7e7;
    color: #000;
    padding: 10px;
}


body{
    background: url('/images/BG.jpg');
    background-size: cover;
}

.main{
    width: 90%;
    height: max-content;
    margin: auto;
    color: #fff;
    background: rgba(48, 43, 43, 0.533);
    margin-bottom: 50px;
}

</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"> </script> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
<script>
    document.addEventListener('DOMContentLoaded', function(){
        var post_id;
        var deleteForm = document.forms['delete-form'];
        var btnDelete = document.getElementById('btn-delete');
        $('#delete-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            post_id = button.data('id');
        })

        btnDelete.onclick = function(){
            deleteForm.action = `/index/${post_id}?_method=DELETE`;
            deleteForm.submit();
        };
    });
</script>
</html>